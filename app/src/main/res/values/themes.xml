<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppleMarket_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.AppleMarket_App" parent="Base.Theme.AppleMarket_App" />

    <style name="MainActivityTheme" parent="Theme.AppleMarket_App"/>

    <!-- Add roundedImageView style -->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="CircularFabStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/CircularFabStyle</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/fab_ripple_red</item>
    </style>


</resources>